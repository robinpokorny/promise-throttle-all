{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Transpilation settings.
    "module": "ES2015",
    "target": "ES2015",

    // Output settings.
    "charset": "utf-8",
    "newLine": "LF",
    "sourceMap": true,

    // Type declaration settings.
    "declaration": true,
    "declarationDir": "dist/",
    "declarationMap": true
  },
  "exclude": ["./src/**/*.test.ts"]
}
